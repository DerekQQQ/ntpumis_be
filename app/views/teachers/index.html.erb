<div class="col-md-12">
<div class="group">
  <a><%= link_to('新增老師', new_teacher_path, class:'btn btn-primary pull-right')%></a>
</div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>中文名字</td>
        <td>職稱</td>
        <td>領域</td>
      </tr>
    </thead>
    <tbody>
      <% @teachers.each do |teacher| %>
        <tr class="<% if teacher.is_chair == true%>info<%end%>">
          <td><%= link_to(teacher.name_c, teacher_path(teacher)) %></td>
          <td><%= @title_array_c[teacher.title_priority] %></td>
          <td><%= teacher.domain_c%></td>
          <td>
            <%= link_to("Edit",edit_teacher_path(teacher), class: "btn btn-sm btn-default")%>
            <%= link_to("Delete", teacher_path(teacher), class: "btn btn-sm btn-danger", method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

