
<div class="col-md-12">
  <div class="group">
    <a><%= link_to('借書', "/borrows/new", class:'btn btn-primary pull-right')%></a>
  </div>

    <ul class="nav nav-tabs">
       <li class="active">
          <a href="#unreturn" data-toggle="tab">未歸還書籍</a>
       </li>
       <li><a href="#returned" data-toggle="tab">已歸還書籍</a></li>
    </ul>

    <div class="tab-content">
       <div class="tab-pane fade in active" id="unreturn">
       <table class="table table-hover">
            <thead>
              <tr>
                <td>書籍名稱</td>
                <td>借閱者姓名</td>
                <td>借閱日期</td>
                <td></td>
              </tr>
            </thead>
            <tbody>
              <% @borrow_unreturn.each do |b| %>
                <tr>
                  <td><%= b.as_json["book_name"] %></td>
                  <td><%= b.as_json["borrower_name"] %></td>
                  <td><%= b.as_json["borrow_date"]%></td>
                  <td>
                    <%= link_to("還書","/borrows/return_book/#{b.as_json['id']}", method: :post, data: { confirm: "確認還書?" }, class: "btn btn-sm btn-success")%>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
      </div>
       <div class="tab-pane fade " id="returned">
       <table class="table table-hover">
            <thead>
              <tr>
                <td>書籍名稱</td>
                <td>借閱者姓名</td>
                <td>借閱日期</td>
                <td>歸還日期</td>
              </tr>
            </thead>
            <tbody>
              <% @borrow_returned.each do |b| %>
                <tr>
                  <td><%= b.as_json["book_name"] %></td>
                  <td><%= b.as_json["borrower_name"] %></td>
                  <td><%= b.as_json["borrow_date"]%></td>
                  <td><%= b.as_json["return_date"]%></td>
                  <td>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
      </div>
    </div>
</div>
