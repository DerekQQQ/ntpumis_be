<%= form_for @post do |f| %>
  <div class="form-group" >
      <%= f.label :title, "標題" %>
      <%= f.text_field :title , class:"form-control", required:true %>
      <%= f.label :post_type, "公告類型" %>
      <%= f.select "post_type",options_for_select(@post_type.map{|job,key| [key, job]},@post.post_type)  , {:include_blank=>'請選擇'}, {required: 'true' , autofocus: 'true', class: 'form-control'} %>
      <%= f.label :description, "公告內容" %>
      <%= f.cktext_area :description, :class=> "form-control", :ckeditor =>{:language=> 'zh-TW'}%>
      <%= f.label :download_link, "附件連結" %>
      <%= f.text_field :download_link , class:"form-control", :placeholder=> "http://google.com.tw" %>
      <%= f.label :end_date, "截止日期" %>
      <%= f.text_field :end_date , class:"form-control"%>
  </div>

    <a><%= f.submit "完成" ,class:"btn btn-primary pull-right" %></a>
<% end %>
